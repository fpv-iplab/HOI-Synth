/* Volume Randomizer */
.internal_vol_tag {
    padding: 8px 16px 8px 0;
}
.internal_vol_tag #delete_button_container {
    display: flex;
    flex-direction: row;
}
.internal_vol_tag #delete_button_container #effect_chance {
    flex-grow: 1;
}
.internal_vol_tag #delete_button_container #effect_chance > .unity-base-slider__input {
    padding: 0 8px;
}
.internal_vol_tag #effect_options_container {
    display: flex;
    flex-direction: row;
    padding-top: 8px;
}
.internal_vol_tag #available_effects_container {
    flex-grow: 1;
}
.internal_vol_tag #effect_container {
    margin-top: 8px;
}
.internal_vol_tag #effect_container #single_effect_container {
    padding: 8px 8px 8px 8px;
    background-color: rgba(0, 0, 0, 0.24);
    margin-bottom: 8px;
    border-radius: 8px;
    position: relative;
}

.internal_vol_tag .internal_vol_tag_effect #top_container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.internal_vol_tag .internal_vol_tag_effect #effect_prop > Foldout > Toggle {
    font-size: 14px;
    -unity-font-style: bold;
    position: absolute;
    left: 22px;
    top: -22px;
}
.internal_vol_tag .internal_vol_tag_effect #effect_prop > Foldout > Toggle #unity-checkmark {
    margin: 4px 8px 4px 4px;
}
.internal_vol_tag .internal_vol_tag_effect #effect_prop > Foldout > #unity-content {
    margin-top: 8px;
}

    /* Messages */
.internal__message {
    margin: 6px 3px;
    padding: 8px 8px;
    background-color: rgba(0, 0, 0, 0.15);
    border-radius: 4px;
    margin-bottom: 8px;
    -unity-font-style: bold;
}
.internal__message.info {
    background-color: rgba(95, 158, 160, 0.45);
}
.internal__message.warning {
    background-color: rgb(130, 30, 0);
}

/* Utility Classes */
.flex_row {
    display: flex;
    flex-direction: row;
}
.flex_col {
    display: flex;
    flex-direction: column;
}
